<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>선언부(decalaration) 메소드</title>
</head>
<body>
	<h2>덧셈</h2>
	<h3>100 + 200 = 300</h3>
	<%
	int a = 100;
	int b = 200;
	int sum = a + b;
	%>
	<h3>100 + 200 = <%=sum %></h3>
	<hr>
<%!
	//선언부에 메소드 정의
	private int sum(int a, int b) {
		return a + b;
	}
%>	
	<h2>선언부의 메소드 사용</h2>
	<h3>100 + 200 = <%=sum(a, b) %></h3>
</body>
</html>








